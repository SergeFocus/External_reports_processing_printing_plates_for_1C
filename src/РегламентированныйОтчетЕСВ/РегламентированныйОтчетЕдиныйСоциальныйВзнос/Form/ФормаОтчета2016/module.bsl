		ТабДокумент.ОриентацияСтраницы = Ориентация;
		
		Макет = ПолучитьМакет("Таблица5_2016");
		
		Шапка  = Макет.ПолучитьОбласть("Шапка");
		ЗначениеВКлетку(мСлужебныеДанные.Области.HTIN.Значение + "          ", Ложь, 10, "ЕДРПОУ", Шапка, Истина);
		ЗначениеВКлетку(мСлужебныеДанные.Области.HTIN1.Значение + "     ", Ложь, 10, "ЛиквЕДРПОУ", Шапка, Истина);
		
		ЗначениеВКлетку(Месяц(мДатаНачалаПериодаОтчета), Истина, 2, "Мес", Шапка, Истина);
		ЗначениеВКлетку(Год(мДатаНачалаПериодаОтчета), Истина, 4, "Год", Шапка, Истина);
