					// Предупреждаем только если это не 1С:Звіт
                    СодержаниеПредупреждения =  СодержаниеПредупреждения + НСТР("ru = ' отпусков по уходу за ребенком'; uk = ' відпусток по догляду за дитиною'") + ", ";
				КонецЕсли;				
